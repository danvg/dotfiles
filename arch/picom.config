# ~/.config/picom/config

backend = "glx";
glx-no-stencil = true;
glx-copy-from-font = false;
xrender-sync-fence = true;

vsync = true;
refresh-rate = 0;

shadow = false;
shadow-radius = 5;
shadow-offset-x = -5;
shadow-offset-y = -5;
shadow-opacity = 0.5;

shadow-exclude = [
   "name *= 'chromium'",
   "name *= 'dolphin'",
   "name *= 'mpv'",
   "name *= 'Konsole'"
];

inactive-opacity = 1;
active-opacity = 1;
frame-opacity = 1;
inactive-opacity-override = false;

blur-background-fixed = false;
blur-background-exclude = [
   "window_type = 'dock'",
   "window_type = 'desktop'"
];

wintypes:
{
  tooltip = { fade = true; shadow = true; opacity = 0.9; focus = true;};
  dock = { shadow = false; opacity = 0.85; }
  dnd = { shadow = false; }
  popup_menu = { opacity = 0.9; }
  dropdown_menu = { opacity = 0.9; }
};

